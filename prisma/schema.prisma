generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
}

/**
 * Anonymous “user” identity (cookie-based).
 * If later you add real auth users, you can link them here.
 */
model Visitor {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dcVid String @unique

  toolUsages ToolUsage[] // ✅ add this if missing
  user       User?       @relation(fields: [userId], references: [id])
  userId     String?
}

/**
 * Tracks “free once per tool”
 * One record per (visitorId, tool).
 */
model ToolUsage {
  id        String   @id @default(cuid())
  tool      String
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  visitorId String?
  visitor   Visitor? @relation(fields: [visitorId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tool, visitorId])
  @@unique([tool, userId])
}

/**
 * Ads: controlled, safe, layout-stable
 */
model AdCampaign {
  id         String    @id @default(uuid())
  title      String
  imageUrl   String
  clickUrl   String
  advertiser String?
  isActive   Boolean   @default(true)
  startsAt   DateTime?
  endsAt     DateTime?
  priority   Int       @default(0) // higher = more likely
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  placements AdPlacement[]
}

model AdPlacement {
  id         String   @id @default(uuid())
  campaignId String
  slot       String // e.g. "home_top", "tool_sidebar", "tool_bottom"
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  campaign AdCampaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index([slot, isActive])
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String? @unique
  name  String?
  image String?
  emailVerified DateTime?   // ✅ ADD THIS
  visitors   Visitor[]
  toolUsages ToolUsage[] // ✅ add this line

  accounts Account[]
  sessions Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
